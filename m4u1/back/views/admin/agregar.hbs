<div class="container" style="margin:100px auto">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Agregar una nueva noverdad</h4>
            <form action="/admin/novedades/agregar" method="post" enctype="multipart/form-data">
            <div class="mb-3 row">
                <input type="text" class="from-control" name="titulo" placeholder="titulo">
            </div>
            <div class="mb-3 row">
                <textarea type="text" class="from-control" name="subtitulo" placeholder="subtitulo"></textarea>
            </div>
            <div class="mb-3 row">
                <textarea type="text" class="from-control" name="cuerpo" placeholder="cuerpo"></textarea>
            </div>
            <div class="mb-3 row">
                <label for="">Imagen: <input type="file" name="imagen" id="imagen"></label>
            </div>
                <button type="submit" class="btn btn-primary">Guardar</button>
            </form>
        </div>
    </div>
</div>
{{#if error}}
<h5>{{message}}</h5>
{{/if}}