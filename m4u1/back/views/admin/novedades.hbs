<div class="container" style="margin-top: 50px;">
  {{! fila 1 }}
  <div class="row">
    <div class="col">
      <p class="text-end">hola
        {{usuario}}
        <a href="/admin/login/logout" class="btn btn-danger">Cerrar sesion
          <i class="bi bi-arrow-bar-right"></i></a></p>
    </div>
  </div>
  {{! fun fila 1 }}
  {{! fila 2 }}
  <div class="row">
    <div class="col-7">
      <h3>Listado de Novedades</h3>
    </div>
    <div class="col-5 text-end">
      <a href="/admin/novedades/agregar" class="btn btn-success"><i
          class="bi bi-plus"
          aria-hidden="true"
        ></i>Nuevo</a>
    </div>
  </div>
  {{! fin fila 2 }}
  {{! fila 3 }}
  <div class="row">
    <div class="col">
      <table class="table">
        <thead>
          <tr class="table-dark">
            <th class="col">#</th>
            <th class="col">Titulo</th>
            <th class="text-end">Acciones</th>
          </tr>
        </thead>
        <tbody>
          {{#each novedades}}
            <tr>
              <th scope="row">{{id}}</th>
              <td>{{titulo}}</td>
              <td class="text-center">
                <a href="/admin/novedades/modificar/{{id}}" class="btn btn-sm btn-secondary" title="Editar">
                  <i class="bi bi-pencil-fill"></i></a>
                <a href="/admin/novedades/eliminar/{{id}}" class="btn btn-sm btn-secondary" title="Eliminar">
                  <i class="bi bi-trash"></i></a>
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>

</div>