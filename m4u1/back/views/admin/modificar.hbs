<div class="container" style="margin: 50px auto;">
  <div class="row">
    <div class="col-6 offset-3">
      <h4>Modificar la novedad</h4>
      <form action="/admin/novedades/modificar" method="post">
        <input type="hidden" value="{{novedad.id}}" name="id" />
        <div class="form-group">
            <input type="text" class="form-control" placeholder="Titulo" value="{{novedad.titulo}}" name="titulo">
        </div>
        <div class="form-group">
            <textarea name="subtitulo" class="form-control" placeholder="Subtitulo">{{novedad.cuerpo}}</textarea>
        </div>
        <div class="form-group">
          <p>
            <label for="">Imagen: <input type="file" name="imagen" id="imagen"></label>
          </p>
          <p>
            <label for="">
              <input type="checkbox" name="img_delete" id="img_delete" value="1"> Eliminar imagen actual=
            </label>
            <input type="hidden" name="img_original" value="{{novedad.img_id}}">
          </p>
        </div>
        <button class="btn btn-primary" type="submit">Modificar</button>
      </form>
    </div>
  </div>
</div>

{{#if error}}
<h5>{{message}}</h5>
{{/if}}